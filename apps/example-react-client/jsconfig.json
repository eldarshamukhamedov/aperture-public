{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "paths": {
      "core/*": ["./source/core/*"],
      "test/*": ["./source/test/*"],
      "types/*": ["./types/*"]
    },
    "target": "es6"
  },
  "exclude": ["node_modules", "build", "public"],
  "include": ["source/**/*", "types/*.ts"]
}
